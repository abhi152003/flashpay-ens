generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Transaction {
  id               String   @id @default(cuid())
  recipientEns     String
  recipientAddress String
  amount           String
  mode             String   // 'fast' or 'onchain'
  status           String   // 'idle', 'confirming', 'pending', 'success', 'failed'
  txHash           String?
  chain            String?  // 'sepolia', 'arc', 'unknown'
  walletAddress    String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([walletAddress])
  @@index([createdAt])
  @@map("transactions")
}
